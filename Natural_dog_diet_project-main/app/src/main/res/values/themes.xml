<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AppRealisation" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="AppTheme.Spinner" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="android:textColorHint">@color/primary_color</item>
        <item name="hintTextColor">@color/primary_color</item>
    </style>
    <!-- Текст с тенью -->
    <style name="TextShadow">
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <!-- Заголовок с градиентом -->
    <style name="TextGradientHeader" parent="TextShadow">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Основной текст -->
    <style name="TextBody">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="Theme.AppRealisation" parent="Base.Theme.AppRealisation" />
</resources>