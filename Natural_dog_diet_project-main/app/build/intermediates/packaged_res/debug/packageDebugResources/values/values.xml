<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string-array name="activelifetime">
        <item>Выберите тип активности вашей собаки из предложенных ниже вариантов:</item>
        <item>Диванная</item>
        <item>Активная (гуляет около 1 часа в день)</item>
        <item>Очень активная (гуляет более 3 ч в день)</item>
    </string-array>
    <string-array name="dogbreed">
        <item>Выберите породу:</item>
        <item>Вельш корги пемброк</item>
        <item>Вельш корги кардиган</item>
        <item>Дворняга</item>
        <item>Немецкая овчарка</item>
    </string-array>
    <string-array name="doggender">
        <item>Выбирите пол вашей собаки:</item>
        <item>Кобель</item>
        <item>Сука</item>
    </string-array>
    <string-array name="dogstatus">
        <item>Выбирите положение вашей собаки</item>
        <item>Беременная до 5 недели</item>
        <item>Беременная до 6-7 недели</item>
        <item>Не беременная</item>

    </string-array>
    <color name="background_color">#FFFBFE</color>
    <color name="black">#FF000000</color>
    <color name="error_color">#B3261E</color>
    <color name="primary_color">#6200EE</color>
    <color name="primary_dark">#4F378B</color>
    <color name="primary_light">#EADDFF</color>
    <color name="secondary_color">#625B71</color>
    <color name="surface_color">#FFFBFE</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">App realisation</string>
    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="AppTheme.Spinner" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="android:textColorHint">@color/primary_color</item>
        <item name="hintTextColor">@color/primary_color</item>
    </style>
    <style name="Base.Theme.AppRealisation" parent="Theme.Material3.DayNight.NoActionBar">
        
        
    </style>
    <style name="TextBody">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>
    <style name="TextGradientHeader" parent="TextShadow">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextShadow">
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
